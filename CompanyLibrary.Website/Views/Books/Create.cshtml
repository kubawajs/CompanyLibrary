@model CompanyLibrary.Website.Models.Book

@{
    ViewData["Title"] = "Create new book";
}

<h2>Create</h2>

<h4>Create new book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
